<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SettlersTheme" parent="Theme.AppCompat.Light">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="colorButtonNormal">@color/accent</item>
        <item name="buttonStyle">@style/PrimaryButton</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@color/grayLight</item>

    </style>

    <style name="CardTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/primaryDark</item>

    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>