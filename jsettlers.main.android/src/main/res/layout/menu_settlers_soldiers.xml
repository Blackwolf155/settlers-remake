<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_divine_promotion_swordsmen"
            android:layout_width="@dimen/menu_tile_divine_promotion_width"
            android:layout_height="@dimen/menu_tile_divine_promotion_height" />

        <ImageView
            android:id="@+id/image_view_divine_promotion_bowmen"
            android:layout_width="@dimen/menu_tile_divine_promotion_width"
            android:layout_height="@dimen/menu_tile_divine_promotion_height" />

        <ImageView
            android:id="@+id/image_view_divine_promotion_pikemen"
            android:layout_width="@dimen/menu_tile_divine_promotion_width"
            android:layout_height="@dimen/menu_tile_divine_promotion_height" />

    </LinearLayout>

</LinearLayout>